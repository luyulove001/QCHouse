            android:textSize="@dimen/y18"/>

        <ImageView
            android:layout_width="@dimen/y24"
            android:layout_height="@dimen/y24"
            android:layout_marginEnd="@dimen/x5"
            android:layout_marginTop="@dimen/y19"
